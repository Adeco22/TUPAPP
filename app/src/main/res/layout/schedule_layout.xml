<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCcode"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCtitle"
        android:layout_below="@+id/tvCcode"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:gravity="end"
        android:layout_below="@+id/tvDate"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/tvRoom"
        android:layout_alignBottom="@+id/tvRoom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRoom"
        android:layout_alignBaseline="@+id/tvCtitle"
        android:layout_alignBottom="@+id/tvCtitle"
        android:gravity="center"
        android:layout_marginStart="200dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:layout_alignBaseline="@+id/tvCcode"
        android:layout_alignBottom="@+id/tvCcode"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
