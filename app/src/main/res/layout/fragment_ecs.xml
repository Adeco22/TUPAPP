<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_color"
    tools:context="com.happymeal.tupapp.EcsFragment"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewBg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight=".9"
        tools:showIn="@layout/activity_product_details">

        <TextView
            android:id="@+id/noResultsFoundView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ecs_noresults"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="19sp"
            android:padding="50dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_sellitem"
                android:textColor="#fff"
                android:background="#e74c3c"
                android:id="@+id/bAdditem"
                style="@style/Widget.AppCompat.Button.Borderless"
            />
        </LinearLayout>

    </LinearLayout>