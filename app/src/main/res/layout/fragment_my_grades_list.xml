<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_color"
    >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mg_semester"
                        android:id="@+id/tvsem"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textColor="#bd2038"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mg_schoolyear"
                        android:id="@+id/tvsy"
                        android:textAlignment="center"
                        android:layout_alignBaseline="@+id/tvsem"
                        android:layout_alignBottom="@+id/tvsem"
                        android:layout_marginStart="200dp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:textColor="#bd2038"/>

                </RelativeLayout>

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#c0c0c0"/>

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lvGradesList"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>